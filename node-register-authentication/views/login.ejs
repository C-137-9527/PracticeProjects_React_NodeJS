<h1>login page</h1>

<form action="/users/login" method="POST">
  <!-- email -->
  <input
    type="email"
    placeholder="email"
    name="email"
    value="<%= typeof email != 'undefined' ? email : '' %>"
  />

  <!-- password -->
  <input
    type="password"
    placeholder="password"
    name="password"
    value="<%= typeof password != 'undefined' ? password : '' %>"
  />

  <button type="submit">submit</button>
</form>

<a href="/users/register">no account?</a>
